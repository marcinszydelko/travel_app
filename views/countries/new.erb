<div>
  <form class="" action="/visited" method="post">
    <label for="country_name">Name of <%= @status %> country: </label>
    <input type="text" id= "country_name" name="name">

    <% if @status == "visited" %>
    <input style="display: none" type="text" name="visited" value="true" required>
    <% else %>
    <input style="display: none" type="text" name="visited" value="false" required>
    <% end %>

    <input type="submit" value="Add this country">
  </form>
</div>
