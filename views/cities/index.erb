<h2>Cities <%= @status %> in <%= @country.name %></h2>

<p class="">
  <a class="" href="/cities/new/<%= @country.id %>">Add City</a>
</p>

<%for city in @cities  %>
  <ul>
    <li><%= city.name %></li>
    <form class="" action="/cities/<%= city.id %>/delete" method="post">
      <input type="submit"  value="delete">
    </form>

    <form class="" action="/cities/<%= city.id %>/edit" method="get">
      <input type="submit"  value="edit">
    </form>
  </ul>



<% end %>
